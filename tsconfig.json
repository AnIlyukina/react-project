{
  "compilerOptions": {
    "strict": true,
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*" ],
    },
    // esModuleInterop позволяет работать с пакетами, которые используют common js
    // как с обычными пакетами с помошью import (require() module.export) = common.js
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    // для абсолютного импорта
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}